<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane id="GridPane" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.lite.pidev.GUI.MailController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <children>
        <Label fx:id="label4" style="-fx-font-weight: bold; -fx-font-size: 24;" text="New mail" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0" />
        <TextField fx:id="address" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1" />
        <TextField fx:id="topic" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="2" />
        <TextArea fx:id="textField" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="3" GridPane.rowSpan="3" />
        <Button fx:id="send" onAction="#handleSend" text="Send" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="6" />
        <Button fx:id="cancel" onAction="#handleCancel" text="Cancel" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="7" />
    </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
    
</GridPane>
